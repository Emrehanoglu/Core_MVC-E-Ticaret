@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Register</h1>
<hr />

<div class="row">
    <div class="col-md-8">

        @if (ViewBag.ErrorMessage != null)
        {
            <span class="text-danger">@ViewBag.ErrorMessage</span>
        }

    <form asp-controller="Account" asp-action="Register" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="FullName" class="col-md-2 col-form-label">FullName</label>
            <div class="col-md-10">
                <input asp-for="FullName" class="form-control" value="@Model.FullName" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="UserName" class="col-md-2 col-form-label">UserName</label>
            <div class="col-md-10">
                <input asp-for="UserName" class="form-control" value="@Model.UserName" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Mail" class="col-md-2 col-form-label">Email</label>
            <div class="col-md-10">
                <input asp-for="Mail" class="form-control" value="@Model.Mail" />
                <span asp-validation-for="Mail" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-md-2 col-form-label">Password</label>
            <div class="col-md-10">
                <input asp-for="Password" class="form-control" value="@Model.Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="RePassword" class="col-md-2 col-form-label">RePassword</label>
            <div class="col-md-10">
                <input asp-for="RePassword" class="form-control" value="@Model.RePassword" />
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-10 offset-md-2">
                <button type="submit" class="btn btn-success">Create User</button>
            </div>
        </div>
    </form>
    </div>
</div>